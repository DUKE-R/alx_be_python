class Book:
    def __init__ (self,title,author,pages):
        self.title = title
        self.author = author
        self.pages = pages
        print (f"The Book {self.title}, written by {self.author} of pages {self.pages} has been added")

#Creating Instances
Book1 = Book("Study", "Ouma", 44)        
Book2 = Book("Work", "Abby", 22)

#Accessing the Attributes
